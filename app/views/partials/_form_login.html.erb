<%= form_for :user, url:{controller: 'sessions', action: 'create'}, html: {class: "form-signin text-center"} do |f| %>
  <img class="mb-4" src="#" alt="Photo here" width="72" height="72">

  <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
  <label for="user_login_email" class="sr-only"> Email </label>
  <%= f.text_field :login_email,  {class: "form-control", placeholder: "Email Address", required: true, autofocus: true} %>
  <label for="user_login_password" class="sr-only">Password</label>
  <%= f.password_field :login_password, {class: "form-control", placeholder: "Password", required: true} %>

  <div class="checkbox mb-3">
    <label>
      <input type="checkbox" value="remember-me"> Remember me
    </label>
  </div>

  <%= f.submit 'Login', {class: "btn btn-lg btn-primary btn-block"} %>
<%end%>
