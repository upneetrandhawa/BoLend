<h1>Search People</h1></br>
<%if logged_in? %>
  <%= form_tag users_path, :method => 'get' do %>
    <%= text_field_tag :name, params[:name] %>
    <%= submit_tag "Search Name" %>
  <% end %>
  <br/>
  <% @users.each do |user| %>
    <p> <%= link_to user.first_name ,user_path(user.id) %>  <%= link_to " Review this user",  new_user_review_path(user.id) %>; Rating : <%=user.average_rating%> </p>
    </br>
  <%end%>
<%else%>
  <p>You are not logged in.
  Please <%= link_to "Signup", new_user_path %> or <%= link_to "login", login_path %> to view all users and their items</p>
<%end%>
